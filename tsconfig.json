{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
		"jsx": "react",
		"lib": ["es7", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "sourceMap": true,
    "strictNullChecks": true,
		"target": "es6",
		"typeRoots": ["node_modules/@types", "./types"]
  },
  "exclude": [
    "node_modules"
  ]
}